<!-- Start form for submission -->
<%= form_for(project, remote: true) do |f| %>
  <div hidden>
  <%= f.text_field :title %>
  <%= f.text_field :input, value: @base64_input%>
  <%= f.text_field :eta %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<div class="field">
  <%= label_tag :input_upload %>
  <%= file_field_tag :input_upload, accept: ".zip, application/zip" %>
</div>
<div hidden>
  <%= text_field_tag :output, value: @output %>
</div>


<!-- End form for submission -->

