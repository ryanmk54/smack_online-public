<div hidden>
  <%= text_area_tag :project_output, @output %>
</div>

<div id="top-row" class="lgray flex-row h-form-row flex-align-center">
  <div class="flex-col-md-2 flex-col-sm-4">
    <%= text_field_tag :title, @project.title, {placeholder: "Title", class: "form-control"} %>
  </div>

  <div id="output-status" class="flex-col-sm-8 flex-col-md-10">
    <label> Status:
    </label>
    <input id="project-status" type="text" value="Not yet verified" class="form-control flex-col-xs-10"/>
  </div>
</div>

<div class="main-container flex-row">
    <!-- Sidebar -->
    <div id="sidebar" class="flex-col-xs-4 flex-col-md-2 gray">
      <!-- Files -->
      <div id="upload-project-container"
           title="Upload a zip file containing your source code">
        <div class="field white-color">
          <%= link_to "Upload Project", '#', {:class => 'navbar-link', 'data-target' => "#new_project_modal", 'data-toggle' => "modal" }  %>

          <span id="input_upload_status"></span>
        </div>
      </div>

      <div id="file-list">
      </div>
    </div>

    <!-- Main -->
    <div class="flex-col-xs-8 flex-col-md-10">

      <!-- Middle -->
      <div id="editors-row" class="lgray output-shrunk">

        <!-- Left -->
        <div id="input-editor-container" class="editor-container">
          <div id="inputEditor" class="ace-editor"></div>
        </div>

          <div id="collapse-output-btn">
            <span id="collapse-output-text"></span>
          </div>

        <!-- Right -->
        <div id="output-editor-container" class="editor-container">

          <div id="outputEditor" class="ace-editor">
          </div>
        </div>

      </div>

      <!-- Bottom -->
      <%= render "options_and_run_row" %>
    </div>
</div>

</div>

<!-- End page body -->
<script src="/assets/ace/ace.js" type="text/javascript" charset="utf-8">
</script>
