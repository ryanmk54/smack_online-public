<style type="text/css">
  body 
  {
    background-color: #eeeeee;
  }

  .container > div{
    width: 50%;
    max-width: 1024px;
    margin: 0 auto;
    text-align: left;
}
</style>

<div class="container">

  <div class="row">

  <%= form_for(resource, :html => {:class => "form-signin "}, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <h2 class="form-signin-heading">Sign up</h2>

    <div class="field">
      <%= f.label "Email and Password" %><br />
      <%= f.email_field :email, :class => "form-control", :placeholder => "Email address", autofocus: true %>
    </div>

    <div class="field">
      <% if @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, :class => "form-control", :placeholder => "Password", autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password confirmation", autocomplete: "off" %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
    </div>
    
    <br />

    <div class="field">
      <%= f.label "Username" %><br />
      <%= f.text_field :username, :class => "form-control", :placeholder => "Username", autocomplete: "off" %>
    </div>
    
    <br />

    <div class="field">
      <%= f.label "Avatar" %><br />
      <%= f.file_field :avatar %>
    </div>

    <br />
    <div class="actions">
      <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %>
    </div>

    <br />

    <%= render "devise/shared/links" %>
  <% end %>

  </div>

</div>
