<style type="text/css">
  body 
  {
    background-color: #eeeeee;
  }

  .container > div{
    width: 50%;
    max-width: 1024px;
    margin: 0 auto;
    text-align: left;
}
</style>

<div class="container">

  <div class="row">

		<h2>Resend confirmation instructions</h2>

		<%= form_for(resource, :html => {:class => "form-signin "}, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <div class="field">
		    <%= f.label :email %><br />
		    <%= f.email_field :email, :class => "form-control", :placeholder => "Email address", autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
		  </div>

		  <br />

		  <div class="actions">
		    <%= f.submit "Resend confirmation instructions", :class => "btn btn-lg btn-primary btn-block" %>
		  </div>
		<% end %>

		<br />

		<%= render "devise/shared/links" %>

	</div>

</div>
