<div class="row" id="user-preview-<%= user.id%>">
  <div class="card-user">
    <div class = "col-sm-4">
      <%= image_tag src=user.avatar.url, :class => 'circular--square', :alt => 'Avatar' %>
    </div>
    <div class = "col-sm-8">
      <div class="card-block">
        <div class="card-title">
          <strong><h2><%= user.username %></h2></strong>
        </div>
        <div class="card-body">
          <strong>Member Since: <%= user.confirmed_at.to_datetime.strftime("%m/%d/%Y") %></strong>
          <br/>
        </div>
      </div>
    </div>

  </div>
</div>

