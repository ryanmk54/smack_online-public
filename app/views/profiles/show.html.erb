<p id="notice"><%= notice %></p>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<style type="text/css">

  .card {
    margin-top: 50px;
    margin-left: 15px;
    padding: 15px 15px 15px 15px;
  }
</style>

<div id="new_project_modal" class="modal">
  <div class="modal_dialog">
    <p>Hello World!</p>
  </div>
</div>

<!--<--%= javascript_include_tag('new_project_modal.js') %>-->





<div class="row">

  <!--profile-->
  <div class="col-sm-2">
    <div class="card" style="width: 20rem; box-shadow: 0 0 10px black;">
      <img class= "card-img-top" src=http://www.zvonimir.info/wp-content/uploads/2012/08/zvonimir_rakamaric.jpg alt="Avatar" style="width:100%;opacity:0.85">
      <div class="card-block">
        <h2 class="card-title">
          <%= @user.email %>
        </h2>
      </div>
    </div>
  </div>

  <!-- Project Preview Menu -->
  <div class="col-sm-2">
    <div class="card" style="width: 20rem;">
      <ul class="list-group">
        <li class="list-group-item">My Projects</li>
        <li class="list-group-item">Shared Projects</li>
        <li class="list-group-item">
          New Project
          <div class= "btn" id="new_project_button">
            <a href="/projects/new">
              <div class="glyphicon glyphicon-plus"></div>
            </a>
          </div>
        </li>
      </ul>
    </div>
  </div>

  <div class="col-sm-8">

    <div id="private_projects">
      <div class="col-sm-8">
        <% @user.private_projects.each do |project| %>
          <div class="col-xs-6 col-md-4" >
            <div class="thumbnail">
              <img src="..." alt="..." style="height: 180px; width: 100%" >
              <div class="caption">
                <h3>  <% project.title %> </h3>
                <div class="btn btn-primary">Open</div>
                <div class="btn btn-primary">Delete</div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>
</div>
