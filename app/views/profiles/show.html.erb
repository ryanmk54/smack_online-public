<div class="row">
  <!--profile-->
  <div class="col-sm-2">
    <div id="profilecard" class="card" style="box-shadow: 1px 1px 1px 1px; background-color: white;">
      <%= image_tag @user.avatar.url(:thumb), :class => 'img-card-top' %>
      <div class="card-block">
        <div class="card-title">
          <strong><%= @user.username %></strong>
          <br/>
          <strong><%= @user.email %></strong>
        </div>
      </div>
      <ul class="nav nav-pills nav-stacked">
        <li role="presentation">
          <a href= "#" id="show_projects">
